<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    style="@android:style/Widget.Button"
    android:background="@drawable/button_template"
    android:gravity="center">


    <TextView
        android:id="@+id/audio_list_item"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_alternates_regular"
        android:padding="8dp"
        android:textSize="16sp"
        android:text=""
        android:textColor="@color/block_main"
        android:layout_weight="1"/>

    <ProgressBar
        android:id="@+id/audio_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/audio_list_item_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_download_done_24"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/audio_list_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@android:color/transparent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/audio_list_item_star_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_red_24"
        android:background="@android:color/transparent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        />

    <ImageButton
        android:id="@+id/audio_list_item_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_red_24"
        android:background="@android:color/transparent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        />

</LinearLayout>