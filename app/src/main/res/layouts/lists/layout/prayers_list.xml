<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center"
    android:focusable="true"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/prayers_list_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/prayer_img"/>

    <TextView
        android:id="@+id/prayers_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:padding="15dp"
        android:textSize="16sp"
        android:text=""
        android:textColor="@color/black"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/prayers_list_item_star_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_24"
        android:background="@android:color/transparent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"/>

    <ImageButton
        android:id="@+id/prayers_list_item_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        android:background="@android:color/transparent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/prayers_list_item_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_download_24"
        android:background="@android:color/transparent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_marginStart="5dp"/>

    <ImageButton
        android:id="@+id/prayers_list_item_downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24_black"
        android:background="@android:color/transparent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>

</LinearLayout>