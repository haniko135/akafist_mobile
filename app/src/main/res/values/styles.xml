<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="block_main_home_text">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/block_main_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cyrillic_old</item>
    </style>
    <style name="block_main_home">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/block_main</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="block_main_line">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/block_main_border</item>
        <item name="android:layout_width">265dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="menuBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/hirmos_ucs</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/block_main</item>
    </style>
    <style name="menu_line">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="toolbarArrow" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="supportToolbar">
        <item name="android:background">@color/beige_500</item>
        <item name="android:fontFamily">@font/hirmos_ucs</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
</resources>