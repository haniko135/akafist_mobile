<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="block_main_home_text">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/block_main_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cyrillic_old</item>
    </style>
    <style name="block_main_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/block_main</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="block_main_line">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/block_main_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="menuBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/hirmos_ucs</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/block_main</item>
    </style>
    <style name="churchCalendBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/cyrillic_old</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/block_main</item>
    </style>
    <style name="churchCalendBlockText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/cyrillic_old</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/block_main</item>
    </style>
    <style name="menu_line">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="supportToolbar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="supportToolbarLand">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="titleToolbar">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/block_main</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="molitvyPlayer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="everyday_time_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/borderBottom</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="underline_block">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/underline_block</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
</resources>