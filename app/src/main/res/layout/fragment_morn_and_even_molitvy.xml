<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.MornAndEvenMolitvyFragment">

    <TextView
        android:id="@+id/morn_and_even_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:padding="10dp"
        android:text="@string/morn_and_even_title"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/morn_and_even_subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/morn_and_even_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="@string/everyday_subtitle"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/morn_and_even_title2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/morn_and_even_title2"
        app:layout_constraintTop_toBottomOf="@+id/morn_and_even_title2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="в 8:00"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/morn_and_even_subtitle2"
        app:layout_constraintStart_toStartOf="@+id/morn_and_even_subtitle2"
        app:layout_constraintTop_toBottomOf="@+id/morn_and_even_subtitle2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:text="в 17:00"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/morn_and_even_subtitle2"
        app:layout_constraintStart_toStartOf="@+id/morn_and_even_subtitle2"
        app:layout_constraintTop_toBottomOf="@+id/morn_and_even_subtitle2" />

</androidx.constraintlayout.widget.ConstraintLayout>