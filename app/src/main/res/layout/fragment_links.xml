<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linksRoot"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="10dp"
    tools:context=".fragments.LinksFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/linksRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/audios_list"
        app:layout_constraintBottom_toTopOf="@+id/molitvy_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/molitvy_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/beige_200"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <SeekBar
            android:id="@+id/durationBarMolitvy"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/seekBarHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:0"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imageButtonPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/downloadLinkButton"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_download_24"
                android:elevation="2dp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/warningToUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:background="@color/white"
        tools:layout_editor_absoluteY="200dp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Переходя на эту страницу, вы соглашаетесь с скачиванием файлов из Интернета."
            android:textSize="16sp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/warningToUserYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Согласен"
            />

        <Button
            android:id="@+id/warningToUserNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не согласен"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>